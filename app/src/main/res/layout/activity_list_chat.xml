<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfafa"
    tools:context="com.skripsi23.appubblik.ListChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relaTitle"
        android:background="#536DFE">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLayanan"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:text="Nama Layanan"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#E0F7FA"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_listchat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:layout_below="@+id/relaTitle"/>

</RelativeLayout>
